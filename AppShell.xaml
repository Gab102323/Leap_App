<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:views="clr-namespace:Leap_App.Views"
       x:Class="Leap_App.AppShell">

    <!-- Register Routes -->
    <ShellContent Route="HomePage_Main" ContentTemplate="{DataTemplate views:HomePage}" />

    <TabBar>
        <ShellContent Title="Leaderboard" Route="LeaderboardPage_Tab1" ContentTemplate="{DataTemplate views:LeaderboardPage}" />
        <ShellContent Title="Objectives" Route="ObjectivePage_Tab1" ContentTemplate="{DataTemplate views:ObjectivePage}" />
        <ShellContent Title="Shop" Route="ShopPage_Tab1" ContentTemplate="{DataTemplate views:ShopPage}" />
    </TabBar>

    <TabBar>
        <ShellContent Title="Home" Icon="home_icon.png" Route="HomePage_Tab1" ContentTemplate="{DataTemplate views:HomePage}" />
        <ShellContent Title="Objectives" Icon="objectives_icon.png" Route="ObjectivePage_Tab1" ContentTemplate="{DataTemplate views:ObjectivePage}" />
        <ShellContent Title="Shop" Icon="shop_icon.png" Route="ShopPage_Tab1" ContentTemplate="{DataTemplate views:ShopPage}" />
        <ShellContent Title="Leaderboard" Icon="leaderboard_icon.png" Route="LeaderboardPage_Tab1" ContentTemplate="{DataTemplate views:LeaderboardPage}" />
    </TabBar>

</Shell>