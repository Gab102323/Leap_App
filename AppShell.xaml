<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:views="clr-namespace:Leap_App.Views"
       x:Class="Leap_App.AppShell">

    <!-- Register Routes -->
    <ShellContent Route="SignInPage" ContentTemplate="{DataTemplate views:SignInPage}" />
    <ShellContent Route="SignUpPage" ContentTemplate="{DataTemplate views:SignUpPage}" />
    <ShellContent Route="MainHomePage" ContentTemplate="{DataTemplate views:HomePage}" />
    <ShellContent Route="LeaderboardPage" ContentTemplate="{DataTemplate views:LeaderboardPage}" />
    <ShellContent Route="ObjectivePage" ContentTemplate="{DataTemplate views:ObjectivePage}" />
    <ShellContent Route="ShopPage" ContentTemplate="{DataTemplate views:ShopPage}" />

    <!-- Tab Bar Navigation -->
    <TabBar>
        <ShellContent 
            Title="Home"
            Icon="home_icon.png"
            Route="MainHomePage"
            ContentTemplate="{DataTemplate views:HomePage}" />

        <ShellContent 
            Title="Shop"
            Icon="shop_icon.png"
            Route="ShopPage"
            ContentTemplate="{DataTemplate views:ShopPage}" />

        <ShellContent 
            Title="Objectives"
            Icon="objectives_icon.png"
            Route="ObjectivePage"
            ContentTemplate="{DataTemplate views:ObjectivePage}" />

        <ShellContent 
            Title="Leaderboard"
            Icon="leaderboard_icon.png"
            Route="LeaderboardPage"
            ContentTemplate="{DataTemplate views:LeaderboardPage}" />
    </TabBar>

</Shell>