<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Leap_App.Views.SignInPage"
             BackgroundColor="Transparent">
    <Grid>
        <!-- Background -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Icon (Aligned like Leaderboard and More) -->
        <ImageButton
            Source="profile_icon.png"
            BackgroundColor="Transparent"
            WidthRequest="40"
            HeightRequest="40"
            HorizontalOptions="Start"
            VerticalOptions="Start"
            Margin="10" />

        <!-- Main Content -->
        <StackLayout Grid.Row="1" Padding="20" VerticalOptions="Center">
            <Entry x:Name="UsernameEntry" Placeholder="Enter Username" />
            <Entry x:Name="PasswordEntry" Placeholder="Enter Password" IsPassword="True" />
            <Button Text="Sign In" Clicked="OnSignInClicked" />
            <Button Text="Sign Up" Clicked="OnSignUpClicked" />
        </StackLayout>
    </Grid>
</ContentPage>