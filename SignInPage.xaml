             x:Class="Leap_App.Views.SignInPage"
             BackgroundColor="Transparent">
    <Grid>
        <!-- Background -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

            <Button Text="Sign In" Clicked="OnSignInClicked" />
            <Button Text="Sign Up" Clicked="OnSignUpClicked" />
        </StackLayout>
    </Grid>
</ContentPage>