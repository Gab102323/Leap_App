<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Leap_App.LeaderboardPage">

	<StackLayout Padding="20">
		<Label Text="Leaderboard" FontSize="24" FontAttributes="Bold"/>
		<ListView>
			<ListView.ItemsSource>
				<x:Array Type="{x:Type x:String}">
					<x:String>1. Player A - 5000 points</x:String>
					<x:String>2. Player B - 4500 points</x:String>
					<x:String>3. Player C - 4200 points</x:String>
				</x:Array>
			</ListView.ItemsSource>
		</ListView>
	</StackLayout>
</ContentPage>
