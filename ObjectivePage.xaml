<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Leap_App.ObjectivesPage">
    
    <StackLayout Padding="20">
        <Label Text="Objectives" FontSize="24" FontAttributes="Bold"/>
        <CollectionView>
            <CollectionView.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>Complete Lesson 1</x:String>
                    <x:String>Earn 100 points</x:String>
                    <x:String>Unlock new mode</x:String>
                </x:Array>
            </CollectionView.ItemsSource>
        </CollectionView>
    </StackLayout>
</ContentPage>
